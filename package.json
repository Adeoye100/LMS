{
  "name": "lms-app",
  "version": "1.0.0",
  "description": "Learning Management System",
  "private": true,
  "scripts": {
    "install:all": "pnpm install && cd client && pnpm install && cd ../server && pnpm install",
    "start": "pnpm run start:server",
    "start:server": "cd server && pnpm start",
    "start:client": "cd client && pnpm start",
    "dev": "concurrently \"pnpm run dev:server\" \"pnpm run dev:client\"",
    "dev:server": "cd server && pnpm run dev",
    "dev:client": "cd client && pnpm run dev",
    "build": "cd client && pnpm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["lms", "learning-management-system"],
  "author": "Adeoye Opeyemi",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "packageManager": "pnpm@10.24.0"
}